@using GuessBender_2024.Dtos.TeamDtos

@model UpdateTeamDto
@{
	ViewData["Title"] = "UpdateTeam";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="page-content">
	<div class="container-fluid">

		<!-- start page title -->
		<div class="row">
			<div class="col-xl-12">

				<div class="card">
					<div class="card-body">

						<h4 class="card-title">Takım güncelleme</h4>
						<p class="card-subtitle mb-4">Takım ile ilgili temel bilgileri eksiksiz doldurunuz.</p>

						<form method="post">
							<input asp-for="Id" type="hidden"/>
							<div class="form-group">
								<label for="exampleInputModel">Takım adı</label>
								<input asp-for=Name type="text" class="form-control" id="exampleInputModel" placeholder="Takım adı">
							</div>
							<div class="form-group">
								<label for="exampleInputModel">Kısaltma</label>
								<input asp-for=Abbr type="text" class="form-control" id="exampleInputModel" placeholder="Kısaltma">
							</div>
							<div class="form-group">
								<label for="exampleInputModel">Ülke</label>
								@Html.DropDownListFor(x => x.CountryId, (List<SelectListItem>)ViewBag.countries, new { @class = "form-control" })
							</div>
							<div class="form-group">
								<label for="exampleInputModel">Kısaltma</label>
								<input asp-for=LogoId type="number" class="form-control" id="exampleInputModel" placeholder="Logo id">
							</div>
							<button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
						</form>

					</div>
				</div>

			</div>
		</div>
	</div>
</div> 