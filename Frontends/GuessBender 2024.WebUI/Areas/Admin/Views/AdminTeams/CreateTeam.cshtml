@using GuessBender_2024.Dtos.TeamDtos

@model (CreateTeamDto,CreateTeamDto)
@{
	ViewData["Title"] = "CreateTeam";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="page-content">
	<div class="container-fluid">

		<!-- start page title -->
		<div class="row">
			<div class="col-xl-12">

				<div class="card">
					<div class="card-body">

						<h4 class="card-title">Takım ekleme</h4>
						<p class="card-subtitle mb-4">Takım ile ilgili temel bilgileri eksiksiz doldurunuz.</p>

						<form method="post">
							<div class="form-group">
								<label for="exampleInputModel">Takım adı</label>
								<input asp-for=Item1.Name type="text" class="form-control" id="exampleInputModel" placeholder="Takım adı">
							</div>
							<div class="form-group">
								<label for="exampleInputModel">Kısaltma</label>
								<input asp-for=Item1.Abbr type="text" class="form-control" id="exampleInputModel" placeholder="Kısaltma">
							</div>
							<div class="form-group">
								<label for="exampleInputModel">Ülke</label>
								@Html.DropDownListFor(x => x.Item1.CountryId, (List<SelectListItem>)ViewBag.countries, new { @class = "form-control" })
							</div>
							<div class="form-group">
								<label for="exampleInputModel">Kısaltma</label>
								<input asp-for=Item1.LogoId type="number" class="form-control" id="exampleInputModel" placeholder="Logo id">
							</div>
							<div class="form-group">
								<label for="exampleInputModel">Logo Url</label>
								<input asp-for=Item2.Name type="text" class="form-control" id="exampleInputModel" placeholder="Logo url">
							</div>
							<button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
						</form>

					</div>
				</div>

			</div>
		</div>
	</div>
</div> 