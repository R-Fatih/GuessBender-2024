@using GuessBender_2024.Dtos.LeagueDtos

@model CreateLeagueDto
@{
	ViewData["Title"] = "CreateLeague";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="page-content">
	<div class="container-fluid">

		<!-- start page title -->
		<div class="row">
			<div class="col-xl-12">

				<div class="card">
					<div class="card-body">

						<h4 class="card-title">Lig ekleme</h4>
						<p class="card-subtitle mb-4">Lig ile ilgili temel bilgileri eksiksiz doldurunuz.</p>

						<form method="post">
							<div class="form-group">
								<label for="exampleInputModel">Lig adı</label>
								<input asp-for=Name type="text" class="form-control" id="exampleInputModel" placeholder="Lig adı">
							</div>
							<div class="form-group">
								<label for="exampleInputModel">Kısaltma</label>
								<input asp-for=Abbr type="text" class="form-control" id="exampleInputModel" placeholder="Kısaltma">
							</div>
							<div class="form-group">
								<label for="exampleInputModel">Ülke</label>
								@Html.DropDownListFor(x => x.CountryId, (List<SelectListItem>)ViewBag.countries, new { @class = "form-control" })
							</div>
							
							@* <div class="form-group">
								<label for="exampleInputModel">Logo Url</label>
								<input asp-for=Name type="text" class="form-control" id="exampleInputModel" placeholder="Logo url">
							</div> *@
							<button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
						</form>

					</div>
				</div>

			</div>
		</div>
	</div>
</div> 